{"ast":null,"code":"import { ref, watch, computed } from \"vue\";\nimport { useStore } from \"vuex\";\nexport default {\n  name: \"CartItem\",\n  props: [\"item\"],\n\n  setup(props) {\n    const store = useStore();\n    const amount = ref(props.item.amount);\n    const savedAmount = computed(() => store.getters.cartItemAmount(props.item.id));\n    watch(amount, () => {\n      store.dispatch(\"updateAmount\", {\n        id: props.item.id,\n        amount: amount.value\n      });\n\n      if (amount.value <= 1) {\n        amount.value = 1;\n      }\n    });\n    watch(computed(() => store.getters.cartItemAmount(props.item.id)), () => {\n      amount.value = savedAmount.value;\n    });\n\n    const inc = () => {\n      if (amount.value === \"\") {\n        amount.value = 0;\n        amount.value += 1;\n      } else {\n        amount.value += 1;\n      }\n    };\n\n    const dec = () => {\n      if (amount.value === \"\" || amount.value <= 1) {\n        removeItem();\n      } else {\n        amount.value -= 1;\n      }\n    };\n\n    const removeItem = () => store.dispatch(\"removeItem\", props.item.id);\n\n    return {\n      amount,\n      inc,\n      dec,\n      removeItem\n    };\n  }\n\n};","map":{"version":3,"mappings":"AA8BA,SAASA,GAAT,EAAcC,KAAd,EAAqBC,QAArB,QAAqC,KAArC;AACA,SAASC,QAAT,QAAyB,MAAzB;AACA,eAAe;AACbC,MAAI,EAAE,UADO;AAEbC,OAAK,EAAE,CAAC,MAAD,CAFM;;AAGbC,OAAK,CAACD,KAAD,EAAQ;AACX,UAAME,KAAI,GAAIJ,QAAQ,EAAtB;AACA,UAAMK,MAAK,GAAIR,GAAG,CAACK,KAAK,CAACI,IAAN,CAAWD,MAAZ,CAAlB;AACA,UAAME,WAAU,GAAIR,QAAQ,CAAC,MAC3BK,KAAK,CAACI,OAAN,CAAcC,cAAd,CAA6BP,KAAK,CAACI,IAAN,CAAWI,EAAxC,CAD0B,CAA5B;AAIAZ,SAAK,CAACO,MAAD,EAAS,MAAM;AAClBD,WAAK,CAACO,QAAN,CAAe,cAAf,EAA+B;AAC7BD,UAAE,EAAER,KAAK,CAACI,IAAN,CAAWI,EADc;AAE7BL,cAAM,EAAEA,MAAM,CAACO;AAFc,OAA/B;;AAKA,UAAIP,MAAM,CAACO,KAAP,IAAgB,CAApB,EAAuB;AACrBP,cAAM,CAACO,KAAP,GAAe,CAAf;AACF;AACD,KATI,CAAL;AAWAd,SAAK,CACHC,QAAQ,CAAC,MAAMK,KAAK,CAACI,OAAN,CAAcC,cAAd,CAA6BP,KAAK,CAACI,IAAN,CAAWI,EAAxC,CAAP,CADL,EAEH,MAAM;AACJ